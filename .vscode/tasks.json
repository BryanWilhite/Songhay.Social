{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dotnet build",
            "command": "dotnet",
            "type": "shell",
            "args": ["build", "${workspaceFolder}/Songhay.Social.sln"],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test [Songhay.Social.Shell.Tests, filtered by selected text]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/Songhay.Social.Shell.Tests/Songhay.Social.Shell.Tests.csproj",
                "--filter:${selectedText}",
                "--logger:trx",
                "--results-directory:${workspaceFolder}/TestResults",
                "--verbosity:normal"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet publish [Songhay.Social.Shell, linux-x64]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "${workspaceFolder}/Songhay.Social.Shell/Songhay.Social.Shell.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--configuration",
                "Release",
                "--self-contained",
                "false",
                "--runtime",
                "linux-x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test [clean test output folder]",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/TestResults"
            },
            "linux": {
                "command": "rm",
                "args": ["--verbose", "*.trx"]
            },
            "windows": {
                "command": "Remove-Item",
                "args": ["-Path", "*.trx", "-Verbose"]
            },
            "problemMatcher": []
        }
    ]
}
